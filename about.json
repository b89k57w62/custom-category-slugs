{
  "name": "動態分類標題",
  "about_url": null,
  "license_url": null,
  "component": true,
  "color_schemes": {},
  "about": "A theme component that displays categories dynamically above the content area on the homepage.",
  "authors": "Jeffrey",
  "theme_version": "1.0.0",
  "minimum_discourse_version": "2.8.0",
  "settings": {
    "show_categories_header": {
      "type": "bool",
      "default": true,
      "description": "啟用動態分類標題顯示"
    },
    "max_categories_shown": {
      "type": "integer",
      "default": 8,
      "description": "顯示的最大分類數量"
    },
    "categories_per_row": {
      "type": "integer", 
      "default": 6,
      "description": "每行顯示的分類數量"
    },
    "show_subcategories": {
      "type": "bool",
      "default": false,
      "description": "顯示子分類"
    },
    "show_category_description": {
      "type": "bool",
      "default": false,
      "description": "顯示分類描述"
    },
    "show_topic_count": {
      "type": "bool",
      "default": true,
      "description": "顯示主題數量"
    },
    "enable_animations": {
      "type": "bool",
      "default": true,
      "description": "啟用動畫效果"
    },
    "hide_on_category_pages": {
      "type": "bool",
      "default": true,
      "description": "在分類頁面隱藏"
    }
  }
} 